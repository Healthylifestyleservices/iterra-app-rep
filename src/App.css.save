@tailwind base;
@tailwind components;
@tailwind utilities;


body {
  margin: 0;
  font-family: 'Helvetica Neue', sans-serif;
  background: #1c1c1c;
  color: #f8f8f8;
}

.app-container {
  min-height: 100vh;
  padding: 4vh 5vw;
  background: linear-gradient(to bottom, #2e1a1a, #0f0f0f);
  position: relative;
}

.title {
  font-size: 3rem;
  font-weight: bold;
  color: #d4af37;
  text-align: center;
  margin-bottom: 2rem;
}

.button-grid {
  display: grid;
  grid-template-columns: repeat(auto-fit, minmax(240px, 1fr));
  gap: 1.5rem;
  margin-bottom: 3rem;
}

.nav-button {
  background: rgba(255, 255, 255, 0.05);
  border: 1px solid #d4af37;
  border-radius: 12px;
  padding: 1rem;
  text-align: center;
  font-size: 1.1rem;
  color: #fff;
  text-decoration: none;
  transition: all 0.3s ease;
}

.nav-button:hover {
  background: rgba(255, 255, 255, 0.1);
  transform: scale(1.03);
  color: #d4af37;
}

.page {
  padding: 2rem;
  background: #2e2e2e;
  border-radius: 12px;
  box-shadow: 0 0 10px rgba(212, 175, 55, 0.3);
  max-width: 700px;
  margin: 0 auto;
}

.assistant-panel {
  position: fixed;
  bottom: 20px;
  right: 20px;
  background: #000000bb;
  padding: 1rem 1.5rem;
  border-radius: 12px;
  color: #fff;
  border: 1px solid #d4af37;
  font-size: 0.95rem;
}
